<h1><%= @user.email %></h1>

<% if current_user != @user %>
  <% if current_user.following? @user %>
    You are currently following <%=@user.email%>
  <%= button_to "Unfollow", unfollow_user_path(@user), method: :delete %>
  <%else%>
    <%= button_to "Follow", follow_user_path(@user) %>
  <%end%>
<%end%>

<%= render @user.images %>
<%= render @groups %>
